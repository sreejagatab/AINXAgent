# Application
NODE_ENV=development
PORT=4000
API_URL=http://localhost:4000
CORS_ORIGINS=http://localhost:3000

# Authentication
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_SECRET=your-refresh-token-secret
REFRESH_TOKEN_EXPIRES_IN=7d

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ainxagent
DATABASE_POOL_SIZE=20

# Redis
REDIS_URL=redis://localhost:6379

# AI Services
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_API_WINDOW=60000
RATE_LIMIT_API_MAX=60
RATE_LIMIT_AI_WINDOW=60000
RATE_LIMIT_AI_MAX=10

# Security
MAX_REQUEST_SIZE=10mb
BCRYPT_ROUNDS=12

# Monitoring
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key

# Deployment
DEPLOY_HOST=your-deploy-host
DEPLOY_USER=your-deploy-user
DEPLOY_PATH=/path/to/deployment

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
EMAIL_FROM=noreply@aiagent.com

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined 